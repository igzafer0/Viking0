                     android:textColor="@color/colorWhite"
                     android:textColorHint="@color/colorWhite"
                     android:singleLine="true"
                     />
             </com.google.android.material.textfield.TextInputLayout>
             <com.google.android.material.textfield.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:hintTextColor="@color/colorWhite"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="10dp"
                 android:textColorHint="@color/colorWhite"
                 android:background="@drawable/textboxdesign"
                 android:hint="E-mail">

                 <EditText
                     android:backgroundTint="@color/colorWhite"
                     android:textColorHighlight="@color/anaYazı"
                     android:id="@+id/email"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/abc"
                     android:layout_marginRight="5dp"
                     android:text=""
                     android:layout_marginLeft="5dp"
                     android:textColor="@color/colorWhite"
                     android:textColorHint="@color/colorWhite"
                     android:singleLine="true"
                     />
             </com.google.android.material.textfield.TextInputLayout>
             <com.google.android.material.textfield.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:hintTextColor="@color/colorWhite"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginBottom="10dp"
                 android:textColorHint="@color/colorWhite"
                 android:background="@drawable/textboxdesign"
                 android:hint="Biyografi">

                 <EditText
                     android:backgroundTint="@color/colorWhite"
                     android:textColorHighlight="@color/anaYazı"
                     android:id="@+id/bio"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/abc"
                     android:layout_marginRight="5dp"
                     android:text=""
                     android:layout_marginLeft="5dp"
                     android:textColor="@color/colorWhite"
                     android:textColorHint="@color/colorWhite"
                     android:singleLine="false"
                     />
             </com.google.android.material.textfield.TextInputLayout>
             <Button
                 android:background="@drawable/btndesignblack"
                 android:layout_width="match_parent"

                 android:layout_marginTop="10dp"

                 android:id="@+id/yazarol"
                 style="@style/SelectableItemBackgroundButton"


                 android:textColor="@color/colorWhite"
                 android:fontFamily="@font/abc"
                 android:textAllCaps="false"
                 android:text="Yazarlık başvurusu yap"
                 android:layout_height="40dp"
                 android:layout_marginStart="10dp"
                 android:layout_marginEnd="10dp"
                />
             <TextView
                 android:layout_width="match_parent"
                 android:textColor="@color/colorWhite"
                 android:fontFamily="@font/abc"
                 android:textSize="7dp"
                 android:text="30-11-2020"

                 android:gravity="center"
                 android:layout_height="wrap_content">

             </TextView>
         </LinearLayout>

     </ScrollView>

 </RelativeLayout>
</LinearLayout>