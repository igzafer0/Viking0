<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgs"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im1"
        android:layout_width="269dp"
        android:layout_height="233dp"
        android:layout_marginLeft="-55dp"
        android:layout_marginTop="-55dp"
        app:srcCompat="@drawable/loginreg_svg" />

    <ImageView
        android:layout_width="24dp"
        app:srcCompat="@drawable/back_arrow"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/back"
        android:layout_height="24dp"
        app:tint="@color/colorWhite" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/im1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/abc"
        android:gravity="center"
        android:paddingStart="5dp"
        android:textSize="20sp"
        android:paddingEnd="5dp"
        android:text="Giriş yap"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="tekrardan merhaba :)"
        android:visibility="gone"
        android:textSize="40sp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/abc"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="100dp"
        android:gravity="left"
        android:paddingEnd="5dp"
        android:layout_alignParentTop="true"
        android:id="@+id/app_name"
        android:paddingStart="5dp"

        android:layout_height="wrap_content">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/colorWhite"
        android:id="@+id/emailinput"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/colorWhite"
        android:layout_above="@id/passinput"
        android:background="@drawable/edittext_design"
        android:hint="Mail veya kullanıcı adı">

        <EditText
            android:backgroundTint="@color/colorWhite"
            android:textColorHighlight="@color/anaYazı"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abc"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:singleLine="true"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/colorWhite"

        android:layout_above="@id/login"
        android:id="@+id/passinput"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColorHint="@color/colorWhite"
        android:layout_marginBottom="60dp"
        android:background="@drawable/edittext_design"
        android:hint="şifre">

        <EditText
            android:textColorHighlight="@color/anaYazı"
            android:id="@+id/pass"
            android:singleLine="true"

            android:backgroundTint="@color/colorWhite"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abc"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite"
            android:textColorHint="#fff"
            />


    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:background="@drawable/buttom_desing2"
        android:layout_width="match_parent"
        android:id="@+id/login"
        android:fontFamily="@font/abc"
        android:textAllCaps="false"
        android:textColor="@color/bgs"
        android:text="Giriş Yap"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginRight="30dp"
        android:layout_above="@id/regs"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

    </Button>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@id/regi"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:id="@+id/regs"
        android:layout_marginRight="30dp"
        android:layout_height="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/bgs"
            android:fontFamily="@font/abc"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="ya da"
            android:textColor="@color/colorWhite">

        </TextView>
    </RelativeLayout>

    <Button
        android:background="@drawable/button_desing"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:id="@+id/regi"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/abc"
        android:textAllCaps="false"

        android:text="Kayıt Ol"
        android:layout_height="wrap_content">

    </Button>
</RelativeLayout>