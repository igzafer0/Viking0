                     android:layout_height="wrap_content"
                     android:fontFamily="@font/abc"
                     android:layout_marginRight="5dp"
                     android:text=""
                     android:layout_marginLeft="5dp"
                     android:textColor="@color/colorWhite"
                     android:textColorHint="@color/colorWhite"
