<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/bgs">



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bgs"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="40dp"
            app:srcCompat="@drawable/svgexit"
            android:layout_height="40dp"
            android:clickable="true"
            android:scaleType="center"
            style="@style/SelectableItemBackgroundImage"
            android:layout_centerVertical="true"
            android:tint="#ffffff"
            android:layout_marginLeft="15dp"
            android:id="@+id/cancel"
            tools:ignore="UseAppTint" />
        <TextView
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="Profili Düzenle"
            android:fontFamily="@font/abc"
            android:textColor="@color/colorWhite"
            android:id="@+id/Textview"
            android:layout_toRightOf="@id/cancel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"

            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:layout_width="45dp"
            app:srcCompat="@drawable/tick_svg"
            android:layout_height="45dp"
            android:id="@+id/okay"
            android:scaleType="center"
            style="@style/SelectableItemBackgroundImage"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:tint="@color/color_Blue"
            android:layout_marginLeft="15dp"
            tools:ignore="UseAppTint" />
    </RelativeLayout>
 <RelativeLayout
     android:layout_width="match_parent"

     android:layout_height="match_parent">
     <ScrollView
         android:layout_width="match_parent"

         android:layout_height="match_parent">
         <LinearLayout
             android:gravity="center"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/pp_change"
        style="@style/SelectableItemBackgroundImage"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/pp"
            android:background="@drawable/commentmark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color_Blue"
            android:fontFamily="@font/abc"
            android:layout_marginTop="10dp"
            android:text="Profil fotoğrafını değiştir"
            android:layout_height="wrap_content"/>

    </LinearLayout>
             <com.google.android.material.textfield.TextInputLayout
