<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/noInternet</item>
        <item name="android:navigationBarColor">@color/noInternet</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:navigationBarColor">@color/bg</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>

    </style>


</resources>